<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>jsp-2.3</feature>
        <feature>jpa-2.0</feature>
        <feature>jaxrs-1.1</feature>
        <feature>jsonp-1.0</feature>
        <feature>servlet-3.1</feature>
        <feature>jdbc-4.1</feature>
        <feature>ejbLite-3.1</feature>
        <feature>appSecurity-2.0</feature>
    </featureManager>
    
    <basicRegistry id="basic" realm="customRealm">
     	<user name="rbarcia" password="bl0wfish" />
     	<user name="kbrown" password="bl0wfish" />
     	<group name="SecureShopper">
        	<member name="rbarcia" />
         	<member name="kbrown" />
     	</group>
   </basicRegistry>
     
    <library id="DB2JCC4Lib">
    	<fileset dir="/opt/ibm/db2/V11.1/java/" includes="db2jcc4.jar db2jcc_license_cu.jar" />
	</library>
    
    <dataSource id="OrderDS" jndiName="jdbc/orderds" type="javax.sql.XADataSource">
    	<jdbcDriver libraryRef="DB2JCC4Lib"/>
    	<properties.db2.jcc  user="db2inst1" password="db2inst1-pwd" databaseName="ORDERDB" serverName="localhost" portNumber="50000"/>
	</dataSource>
	
	<dataSource id="INDS" jndiName="jdbc/inds" type="javax.sql.XADataSource">
		<jdbcDriver libraryRef="DB2JCC4Lib"/>
        <properties.db2.jcc  user="db2inst1" password="db2inst1-pwd" databaseName="INDB" serverName="localhost" portNumber="50000"/>
    </dataSource>
    
    
    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint host="*" id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

</server>